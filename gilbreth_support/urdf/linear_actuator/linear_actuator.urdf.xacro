<?xml version="1.0"?>
<robot name="linear_actuator_urdf" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find ur_description)/urdf/ur10.urdf.xacro"/>
  <xacro:ur10_robot prefix="robot_" joint_limited="true"/>

  <xacro:include filename="$(find gilbreth_support)/urdf/vacuum_gripper/vacuum_gripper.urdf.xacro"/>
  <xacro:vacuum_gripper_urdf prefix="vacuum_gripper_"/>

  <xacro:macro name="linear_actuator_urdf" params="prefix">
    <xacro:property name="width" value="0.2" />
    <xacro:property name="length" value="4.6" />
    <xacro:property name="height" value="0.1" />
    <xacro:property name="carriage_length" value="0.2"/>

    <!-- link list -->
    <link name="world"/>
    <link name="${prefix}base_link">
      <visual>
        <origin xyz="0 0 ${height / 2}" rpy="0 0 0" />
        <geometry>
          <box size="${width} ${length} ${height}" />
        </geometry>
        <material name="grey">
          <color rgba="0.2 0.2 0.2 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 ${height / 2}" rpy="0 0 0" />
        <geometry>
          <box size="${width} ${length} ${height}" />
        </geometry>
        <material name="grey"/>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="0.1" ixy="0" ixz="0"
                 iyy="0.1" iyz="0"
                 izz="0.1" />
        <mass value="1" />
      </inertial>
    </link>
    <link name="${prefix}carriage">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="0.1" ixy="0" ixz="0"
                 iyy="0.1" iyz="0"
                 izz="0.1" />
        <mass value="1" />
      </inertial>
    </link>

    <!-- joint list -->
    <joint name="${prefix}world_joint" type="fixed">
      <parent link="world" />
      <child link="${prefix}base_link" />
      <origin xyz="0.4 0.0 0.9" rpy="0 0 0" />
    </joint>
    <joint name="${prefix}carriage_joint" type="prismatic">
      <parent link="${prefix}base_link" />
      <child link="${prefix}carriage" />
      <origin xyz="0 0 ${height}" rpy="0 0 0" />
      <axis xyz="0 1 0" />
      <limit lower="-${(length / 2) - carriage_length}"
             upper="${(length / 2) - carriage_length}"
             effort="1000"
             velocity="3" />
      <dynamics damping="0.7" friction="500.0" />
    </joint>
    <joint name="${prefix}joint_2" type="fixed">
      <parent link="${prefix}carriage" />
      <child link="robot_base_link" />
    </joint>
    <joint name="${prefix}joint_3" type="fixed">
      <parent link="robot_tool0" />
      <child link="vacuum_gripper_base_link" />
    </joint>
  </xacro:macro>
</robot>
